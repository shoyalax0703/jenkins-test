pipeline {
    agent {
        kubernetes {
            // Use a label that matches the Jenkins Kubernetes plugin configuration
            label 'jenkins-pod'
            yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    some-label: jenkins-pod
spec:
  serviceAccountName: jenkins
  containers:
  - name: jnlp
    image: jenkins/inbound-agent:latest
    args: ['\$(JENKINS_SECRET)', '\$(JENKINS_NAME)']
  """
        }
    }
    stages {
        stage('List Nodes') {
            steps {
                sh 'kubectl get nodes'
            }
        }
    }
}
